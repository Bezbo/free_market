<h1>User index</h1>

<%= render partial: 'shared/page_with_search',
           locals: {search_path: users_path, search_placeholder: "user search.."} %>

<% if @users.empty? %>
  no results..
<% else %>
  <table class="index">
    <tr>
      <th>name</th>
      <th>email</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </table>
<% end %>


